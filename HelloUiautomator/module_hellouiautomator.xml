<?xml version="1.0" encoding="UTF-8"?>
<project name="module_hellouiautomator" default="compile.module.hellouiautomator">
  <dirname property="module.hellouiautomator.basedir" file="${ant.file.module_hellouiautomator}"/>
  
  <property name="module.jdk.home.hellouiautomator" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.hellouiautomator" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.hellouiautomator" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.hellouiautomator" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="hellouiautomator.output.dir" value="${module.hellouiautomator.basedir}/out/production/HelloUiautomator"/>
  <property name="hellouiautomator.testoutput.dir" value="${module.hellouiautomator.basedir}/out/test/HelloUiautomator"/>
  
  <path id="hellouiautomator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="hellouiautomator.module.production.classpath">
    <path refid="${module.jdk.classpath.hellouiautomator}"/>
    <path refid="library.android.classpath"/>
  </path>
  
  <path id="hellouiautomator.runtime.production.module.classpath">
    <pathelement location="${hellouiautomator.output.dir}"/>
    <path refid="library.android.classpath"/>
  </path>
  
  <path id="hellouiautomator.module.classpath">
    <path refid="${module.jdk.classpath.hellouiautomator}"/>
    <pathelement location="${hellouiautomator.output.dir}"/>
    <path refid="library.android.classpath"/>
  </path>
  
  <path id="hellouiautomator.runtime.module.classpath">
    <pathelement location="${hellouiautomator.testoutput.dir}"/>
    <pathelement location="${hellouiautomator.output.dir}"/>
    <path refid="library.android.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.hellouiautomator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.hellouiautomator">
    <patternset refid="excluded.from.module.hellouiautomator"/>
  </patternset>
  
  <path id="hellouiautomator.module.sourcepath">
    <dirset dir="${module.hellouiautomator.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.hellouiautomator" depends="compile.module.hellouiautomator.production,compile.module.hellouiautomator.tests" description="Compile module HelloUiautomator"/>
  
  <target name="compile.module.hellouiautomator.production" depends="register.custom.compilers" description="Compile module HelloUiautomator; production classes">
    <mkdir dir="${hellouiautomator.output.dir}"/>
    <javac2 destdir="${hellouiautomator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.hellouiautomator}/javac">
      <compilerarg line="${compiler.args.hellouiautomator}"/>
      <bootclasspath refid="hellouiautomator.module.bootclasspath"/>
      <classpath refid="hellouiautomator.module.production.classpath"/>
      <src refid="hellouiautomator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.hellouiautomator"/>
    </javac2>
    
    <copy todir="${hellouiautomator.output.dir}">
      <fileset dir="${module.hellouiautomator.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.hellouiautomator.tests" depends="register.custom.compilers,compile.module.hellouiautomator.production" description="compile module HelloUiautomator; test classes" unless="skip.tests"/>
  
  <target name="clean.module.hellouiautomator" description="cleanup module">
    <delete dir="${hellouiautomator.output.dir}"/>
    <delete dir="${hellouiautomator.testoutput.dir}"/>
  </target>
</project>